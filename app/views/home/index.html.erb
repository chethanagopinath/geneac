<div class="text-center">  
  <h1 class="display-4"><%= setting(:site_title) %></h1>
  <i class="lead"><%= setting(:site_tagline) %></i>
</div>

<div class="row">
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-12">
  <% if @recent_updates %>
    <div class="recent-updates mt-5">
      <h2 class="text-center"><%= t('home.recent_updates') %></h2>
      <% @recent_updates.each do |recent_update| %>
        <%= render partial: 'shared/search_doc', locals: { doc: recent_update }  %>
      <% end %>
    </div>
  <% end %>
  </div>
</div>