<!DOCTYPE html>
<html>
  <head>
  <title><%= setting(:site_title) %> - <%= @title || setting(:site_tagline) %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'application_stylesheet' %>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <%= render 'shared/navbar', show_search_bar: true %>
    <div class="container mb-5">
      <% if flash.any? %>
        <div class="flashes">
          <% flash.each do |key, value| -%>
            <div class="flash flash-<%= key %>"><%= value.html_safe %></div>
          <% end -%>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>