<!DOCTYPE html>
<html>
  <head>
  <title>Geneac - Genealogy for Maniacs</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= javascript_pack_tag 'bootstrap' %>
  <%= stylesheet_pack_tag 'bootstrap' %>

  <%= javascript_pack_tag 'fontawesome' %>
  <%= stylesheet_pack_tag 'fontawesome' %>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <%= render 'shared/navbar', show_search_bar: true %>
    <div class="container">
      <% if flash.any? %>
        <div class="flashes">
          <% flash.each do |key, value| -%>
            <div class="flash flash-<%= key %>"><%= value.html_safe %></div>
          <% end -%>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>